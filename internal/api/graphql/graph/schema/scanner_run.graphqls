type ScannerRun implements Node {
    id:         ID!
    uuid:       String!
    tag:        String!
    start_run:  DateTime!
    end_run:    DateTime!
    completed:  Boolean!
    metadata:   Metadata
}

input ScannerRunInput {
    uuid:   String
    tag:    String
}

type ScannerRunConnection implements Connection {
    totalCount:     Int!
    edges:          [ScannerRun]
    pageInfo:       PageInfo
}

type ScannerRunEdge implements Edge {
    node:   ScannerRun!
    cursor: String
}

input ScannerRunFilter {
    tag: [String],
    completed: Boolean,
}