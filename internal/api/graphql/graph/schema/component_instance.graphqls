type ComponentInstance implements Node {
    id: ID!
    ccrn: String
    region: String
    cluster: String
    namespace: String
    domain: String
    project: String
    pod: String
    container: String
    type: ComponentInstanceTypes
    context: Json
    count: Int
    componentVersionId: String
    componentVersion: ComponentVersion
    issueMatches(filter: IssueMatchFilter, first: Int, after: String): IssueMatchConnection
    serviceId: String
    service: Service
    metadata: Metadata
    parentId: String
}

input ComponentInstanceInput {
    ccrn: String
    count: Int
    componentVersionId: String
    serviceId: String
    region: String
    cluster: String
    namespace: String
    domain: String
    project: String
    pod: String
    container: String
    type: ComponentInstanceTypes
    context: Json
    uuid: String
    parentId: String
}

type ComponentInstanceConnection implements Connection {
    totalCount: Int!
    edges: [ComponentInstanceEdge]!
    pageInfo: PageInfo
}

type ComponentInstanceEdge implements Edge {
    node: ComponentInstance!
    cursor: String
}

input ComponentInstanceFilter {
    componentVersionDigest: [String],
    serviceCcrn: [String],
    ccrn: [String],
    region: [String],
    cluster: [String],
    namespace: [String],
    domain: [String],
    project: [String],
    pod: [String],
    container: [String],
    type: [ComponentInstanceTypes],
    context: [Json],
    supportGroup: [String],
    search:[String],
    state: [StateFilter!],
    parentId: [String]
}

input ComponentInstanceOrderBy {
    by: ComponentInstanceOrderByField
    direction: OrderDirection
}

enum ComponentInstanceTypes {
    Unknown,
	Project,
	Server,
	SecurityGroup,
    SecurityGroupRule
	DnsZone,
	FloatingIp,
	RbacPolicy,
	User,
    Container,
    RecordSet
}

enum ComponentInstanceOrderByField {
    ccrn
    region
    namespace
    cluster
    domain
    project
    pod
    container
    type
}
